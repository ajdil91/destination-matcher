require 'colorize'

<div class="wrapper">
  <div class="container">
    <h3 class="text-center">Our recommended destinations for you</h3>
    <div class="row">
       <% @result_cities.each do |city, flight_ids| %>
         <% country = city.country %>
          <div class="col-xs-12.offset-xs-2 col-sm-6 col-md-6 col-lg-4">
            <%= link_to city_path(city, flight_ids: flight_ids.join("-")) do %>
              <div class="card">
                <%= cl_image_tag city.photo %>
                <div class="card-overlay"></div>
                <span class="title"><h3><%= city.name %>, <%= country.name %></h3></span>
                <span class="info">
                <h4 >English Level: <%= 'â˜…' * country.english_level %></h4>
                <h4>Overall Risk: <%= "medium".capitalize %></h4><!-- To unhardcode when risks seeded -->
                </span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
   </div>
</div>
