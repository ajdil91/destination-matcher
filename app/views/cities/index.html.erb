<%= render "shared/banner" %>

<div class="wrapper">
  <div class="container">
    <div class="row">

        <% @cities.each do |city| %>
         <% country = city.country %>
          <div class="col-xs-12.offset-xs-2 col-sm-6 col-md-6 col-lg-4">
            <div class="card">
              <%= link_to city_path(city) do %>
                <%= cl_image_tag city.photo %>
                <span class="title"><h2><%= city.name %></h2></span>
                <div class="info">
                <h3><%= country.name %></h3>
                <p>Language: <%= country.language %></p>
                <p>English Level: <%= country.english_level%></p>
                <p>Currency: <%= country.currency %></p>
              </div>
              <% end %>
            </div>
          </div>
        <% end %>

      </div>
   </div>
</div>
