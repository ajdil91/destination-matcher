<div class="blog-card">
  <div class="meta">
    <div class="photo"><%= image_tag @accommodation.photo, width: 300, height: 300, crop: :fill %></div>
  </div>
  <div class="description">
    <h1><%= @accommodation.name %></h1>
    <h2>Rating: <%= @accommodation.score %></h2>
    <p>Price: <%= @accommodation.price%> USD per night</p>
    <p><%= @accommodation.address%></p>
    <button type="button" class="modal-btn btn btn-success" data-toggle="modal" data-target="#accom"><i class="fas fa-exchange-alt"></i></button>
    <%= link_to "Book", @accommodation.booking_url, target: "_blank", class: "btn btn-success" %>
  </div>
</div>

<%= render "shared/accomodation_modal" %>


