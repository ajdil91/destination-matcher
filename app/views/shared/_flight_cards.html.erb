<div class="recommended-flight-container text-center">



    <%= render "shared/flight_modal" %>

  <div class="flight-card">
    <!-- Button Column -->
    <div class="container col-xs-9">
    <div class="col-xs-1">
    <!-- Button trigger modal -->
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalLong"><i class="fas fa-exchange-alt"></i></button>
    </div>

    <!-- Flight content -->
    <div class="col-xs-11">
      <div class="col-xs-3">
        <div clas="row">
          <span><%= @flight.depart_airline_name %></span>
        </div>
        <div clas="row">
          <span><%= @flight.return_airline_name %></span>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="text-right row">
          <ul class="list-unstyled">
            <li><%= @flight.depart_departure_time.strftime("%R") %></li>
            <li><%= @flight.departure_location %></li>
          </ul>
        </div>
        <div class="text-right row">
          <ul class="list-unstyled">
            <li><%= @flight.return_departure_time.strftime("%R") %></li>
            <li><%= @flight.return_location %></li>
          </ul>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="row">
          <ul class="list-unstyled">
            <li>--------<i class="fas fa-plane"></i></li>
            <% if @flight.depart_stops == "direct" %>
              <li><%= @flight.depart_stops %></li>
            <% elsif @flight.depart_stops == "1" %>
              <li><%= @flight.depart_stops %> stop</li>
            <% else %>
              <li><%= @flight.depart_stops %> stops</li>
            <% end %>
          </ul>
        </div>
        <div class="row">
          <ul class="list-unstyled">
            <li>--------<i class="fas fa-plane"></i></li>
            <% if @flight.return_stops == "Direct" %>
              <li><%= @flight.return_stops %></li>
            <% elsif @flight.return_stops == "1" %>
              <li><%= @flight.return_stops %> stop</li>
            <% else %>
              <li><%= @flight.return_stops %> stops</li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-xs-3">
        <div class="text-left row">
          <ul class="list-unstyled">
            <li><%= @flight.depart_arrival_time.strftime("%R") %></li>
            <li><%= @flight.return_location %></li>
          </ul>
        </div>
        <div class="row">
          <ul class="text-left list-unstyled">
            <li><%= @flight.return_arrival_time.strftime("%R") %></li>
            <li><%= @flight.departure_location %></li>
          </ul>
        </div>
      </div>

    </div>
  </div>

      <div class="text-center price-container col-xs-3">
        <div class='topleftconcave'></div>
        <div class="row">
          <h2><strong>Total</strong></h2>
          <h4><i class="fas fa-dollar-sign"></i><%= @flight.price %> USD</h4>
        </div>
        <div class="row">
          <%= link_to "Book", @flight.booking_url, class: "btn btn-success" %>
        </div>
      </div>


  </div>

</div>
