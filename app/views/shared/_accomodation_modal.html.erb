<!-- Modal -->
<div class="modal fade" id="accom" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="text-center modal-title" id="exampleModalLongTitle">Additional Accomodation Options</h3>
        <div class="modal-body">
        <!-- accomodation details -->
        <% @accommodations.each do |accom| %>
        <div class="blog-card">
          <div class="meta">
            <div class="photo"><%= image_tag accom.photo, width: 300, height: 300, crop: :fill %></div>
          </div>
          <div class="description">
            <h1><%= accom.name %></h1>
            <h2>Rating: <%= accom.score %></h2>
            <p>Price: <%= accom.price%> USD per night</p>
            <p><%= accom.address%></p>
          </div>
        </div>
        <% end %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>
