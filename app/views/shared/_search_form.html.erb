<!-- Simple Form -->

<div class="container text-center">
  <div class="row">
    <div class="search-box col-xs-12.offset-xs-2 col-sm-6 col-md-6 col-lg-4">
      <%= simple_form_for cities_path, url: cities_path, method: :get do |f| %>
        <div class ="form-group col-xs-12 col-md-6">
          <%= f.input :origin, collection:  City.all.each { |r| r.name }, placeholder: "Traveling from?", input_html: {class: "form-small"} %>
        </div>
        <div class ="form-group col-xs-12 col-md-6">
          <%= f.input :region, collection:  Region.all.each { |r| r.name }, input_html: {class: "form-small"}, prompt: "Pick a Region" %>
        </div>
        <div class ="form-group col-xs-12 col-md-6">
          <%= f.input :min_budget, collection: ["500 USD","1,000 USD", "1,500 USD", "2,000 USD", "2,500 USD", "3,000 USD", "3,500 USD", "4,000 USD", "4,500 USD", "5,000 USD", "5,500 USD", "6,000 USD", "6,500 USD", "7,000 USD", "7,500 USD", "8,000 USD", "8,500 USD", "9,000 USD", "9,500 USD", "10,000 USD"], input_html: {class: "form-small"}, label: raw('<i class="far fa-money-bill-alt"></i> Min budget')%>
        </div>
        <div class ="form-group col-xs-12 col-md-6">
          <%= f.input :max_budget, collection: ["500 USD","1,000 USD", "1,500 USD", "2,000 USD", "2,500 USD", "3,000 USD", "3,500 USD", "4,000 USD", "4,500 USD", "5,000 USD", "5,500 USD", "6,000 USD", "6,500 USD", "7,000 USD", "7,500 USD", "8,000 USD", "8,500 USD", "9,000 USD", "9,500 USD", "10,000 USD"], input_html: {class: "form-small"}, label: raw('<i class="far fa-money-bill-alt"></i> Max budget')%>
        </div>
          <!-- put Flatpicker here -->
        <div class="form-group col-xs-12 col-md-6">
            <%= f.input :dep_date, as: :string, required: false, input_html: {class: "datepicker form-small"}, placeholder: "Departure Date", label: raw('<i class="fas fa-plane-departure"></i> Departure Date') %>
        </div>
        <div class="form-group col-xs-12 col-md-6">
          <%= f.input :return_date, as: :string, required: false, input_html: {class: "datepicker form-small"}, placeholder: "Return Date", label: raw('<i class="fas fa-plane-arrival"></i> Return Date') %>
        </div>
        <div class="form-group col-xs-12 text-center">
          <%= f.submit "Search", class: "form-small submit-button btn btn-primary spin-trigger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
