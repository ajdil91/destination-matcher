<div class="containter">
  <div class="row">
    <div class="search-box">
      <%= form_tag cities_path, method: :get do %>
        <div class ="form-group col-xs-6">
          <%= text_field_tag :origin, params[:origin], class: "form-control", placeholder: "Where are you traveling from?"%>
        </div>
        <div class ="form-group col-xs-6">
          <%= select_tag :region, params[:region], class: "form-control", prompt: "Pick a Region" %>
        </div>
        <div class ="form-group col-xs-12">
          <%= text_field_tag :min_budget, params[:min_budget], class: "form-control", placeholder: "What's your minimum budget?"%>
        </div>
        <div class ="form-group col-xs-12">
          <%= text_field_tag :max_budget, params[:max_budget], class: "form-control", placeholder: "What's your maximum budget?"%>
        </div>
          <!-- put Flatpicker here -->
        <div class ="form-group col-xs-6">
          <%= date_field_tag :dep_date, params[:dep_date], input_html: { class: "datepicker" }, class: "form-control", placeholder: "Departure Date"%>
        </div>
        <div class ="form-group col-xs-6">
          <%= date_field_tag :return_date, params[:return_date], input_html: { class: "datepicker" }, class: "form-control", placeholder: "Return Date"%>
        </div>
        <div><%= submit_tag ("Search"), class: "form-control btn-success" %></div>
      <% end %>
    </div>
  </div>
</div>
