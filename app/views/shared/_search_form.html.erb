<!-- Simple Form -->

<div class="containter">
  <div class="row">
    <div class="search-box col-xs-12">
      <%= simple_form_for cities_path, method: :get do |f| %>
        <div class ="form-group col-xs-6">
          <%= f.input :origin, placeholder: "Traveling from?", input_html: {class: "form-small"} %>
        </div>
        <div class ="form-group col-xs-6">
          <%= f.input :region, collection:  Region.all.each { |r| r.name }, input_html: {class: "form-small"}, prompt: "Pick a Region" %>
        </div>
        <div class ="form-group col-xs-6">
          <%= f.input :min_budget, collection: [500, 1000, 1500, 2000, 2500, 3000, 3500, 4000, 4500, 5000, 5500, 6000], input_html: {class: "form-small"}, label: raw('<i class="far fa-money-bill-alt"></i> Max budget')%>
        </div>
        <div class ="form-group col-xs-6">
          <%= f.input :max_budget, collection: [500, 1000, 1500, 2000, 2500, 3000, 3500, 4000, 4500, 5000, 5500, 6000], input_html: {class: "form-small"}, label: raw('<i class="far fa-money-bill-alt"></i> Max budget')%>
        </div>
          <!-- put Flatpicker here -->
        <div class="form-group col-xs-6">
            <%= f.input :dep_date, as: :string, required: false, input_html: {class: "datepicker form-small"}, placeholder: "Departure Date", label: raw('<i class="fas fa-plane-departure"></i> Departure Date') %>
        </div>
        <div class="form-group col-xs-6">
          <%= f.input :return_date, as: :string, required: false, input_html: {class: "datepicker form-small"}, placeholder: "Return Date", label: raw('<i class="fas fa-plane-arrival"></i> Return Date') %>
        </div>
        <div class="form-group col-xs-12">
        <div><%= f.submit "Search", class: "form-small submit-button btn btn-primary" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
