<div class="navbar-dm">
  <!-- Destination Matcher logo -->
  <div class="logo">
    <%= link_to root_path, class: "navbar-dm-logo" do %>
    <%= image_tag "logo.jpg", height: 50 %>
    <% end %>
  </div>
  <%= yield %>

<!-- Right side when Logged IN-->
  <div class="navbar-dm-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
        <div class="navbar-dm-item">
          <div class="dropdown">
            <ul class="dropdown-menu dropdown-menu-right navbar-dm-dropdown-menu">
              <li><%= link_to 'My favorites', user_path(current_user) %>  </li>
              <li><%= link_to destroy_user_session_path, method: :delete, class: "navbar-dm-item navbar-dm-link" do  %>
              <%= t(".sign_out", default: "Log out") %></li>
              <% end %>
            </ul>
          </div>
        </div>
  </div>
    <% else %>
      <!-- Right side when logged OUT -->
      <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-dm-item navbar-dm-link" %>
      <%= link_to t(".sign_in", default: "Log in"), new_user_session_path, class: "navbar-dm-item navbar-dm-link" %>
    <% end %>
  </div>
</div>
