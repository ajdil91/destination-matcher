<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Additional Flight Options</h5>
      </div>
      <div class="modal-body">
           <!-- flight details -->
        <% @flights.each do |flight| %>
        <div class="flight-card">

              <div class="col-xs-8">

                <!-- Button trigger modal -->
                <div class="text-left row">
                  <span><%= flight.depart_airline_name %></span>
                  <span><%= flight.depart_departure_time.strftime("%R") %> </i> <i class="fas fa-plane"> </i><%= flight.depart_arrival_time.strftime("%R") %></span>
                </div>
                <div class="text-left row">
                  <span><%= flight.return_airline_name %></span>
                  <span><%= flight.return_departure_time.strftime("%R") %> </i> <i class="fas fa-plane"> </i><%= flight.return_arrival_time.strftime("%R") %></span>
                </div>
              </div>
              <div class="text-center price-container col-xs-4">
                <h2><strong>Total</strong></h2>
                <h4><i class="fas fa-dollar-sign"></i><%= flight.price %> USD</h4>
              </div>


        </div>
                 <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
