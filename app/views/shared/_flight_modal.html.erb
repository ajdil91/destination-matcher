<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Additional Flight Options</h5>
      </div>
      <form method="get" action="/change_first_pick">
      <div class="modal-body">
           <!-- flight details -->
        <% @flights.each do |flight| %>
        <div class="flight-card" id="flight-radio-btn">
              <!-- radio button -->

                <input type="radio" class="flight_choice radio" name="flight_choice" value=<%= flight.id %>
                <%= flight.id == @picked_flight ? 'checked' : '' %>>

              <!-- Flight content -->
              <div class="col-xs-9">
                <div class="col-xs-2">
                  <div clas="row">
                    <span><%= image_tag @flight.depart_image_url %></span>
                  </div>
                  <div clas="row">
                    <span><%= image_tag @flight.return_image_url %></span>
                  </div>
                </div>
                <div class="col-xs-3">
                  <div class="text-right row">
                    <ul class="list-unstyled">
                      <li><%= @flight.depart_departure_time.strftime("%R") %></li>
                      <li><%= @flight.depart_code %></li>
                    </ul>
                  </div>
                  <div class="text-right row">
                    <ul class="list-unstyled">
                      <li><%= @flight.return_departure_time.strftime("%R") %></li>
                      <li><%= @flight.return_code %></li>
                    </ul>
                  </div>
                </div>
                <div class="col-xs-3">
                  <div class="row">
                    <ul class="list-unstyled">
                      <li>--------<i class="fas fa-plane"></i></li>
                      <% if @flight.depart_stops == "Direct" %>
                        <li><%= @flight.depart_stops %></li>
                      <% elsif @flight.depart_stops == "1" %>
                        <li><%= @flight.depart_stops %> stop</li>
                      <% else %>
                        <li><%= @flight.depart_stops %> stops</li>
                      <% end %>
                    </ul>
                  </div>
                  <div class="row">
                    <ul class="list-unstyled">
                      <li>--------<i class="fas fa-plane"></i></li>
                      <% if @flight.return_stops == "Direct" %>
                        <li><%= @flight.return_stops %></li>
                      <% elsif @flight.return_stops == "1" %>
                        <li><%= @flight.return_stops %> stop</li>
                      <% else %>
                        <li><%= @flight.return_stops %> stops</li>
                      <% end %>
                    </ul>
                  </div>
                </div>
                <div class="col-xs-3">
                  <div class="text-left row">
                    <ul class="list-unstyled">
                      <li><%= @flight.depart_arrival_time.strftime("%R") %></li>
                      <li><%= @flight.return_code %></li>
                    </ul>
                  </div>
                  <div class="row">
                    <ul class="text-left list-unstyled">
                      <li><%= @flight.return_arrival_time.strftime("%R") %></li>
                      <li><%= @flight.depart_code %></li>
                    </ul>
                  </div>
                </div>
              </div>


                <div class="text-center price-container col-xs-3">
                  <div class="row">
                    <h2><strong>Total</strong></h2>
                    <h4><i class="fas fa-dollar-sign"></i><%= flight.price %> USD</h4>
                  </div>
                </div>



        </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
      <input type="hidden" name="city-id" value=<%= params[:id] %>>
      <input type="hidden" name="flight_ids" value=<%= params['flight_ids'] %>>

      </form>
    </div>
  </div>
</div>
